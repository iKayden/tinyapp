<%- include("partials/_head"); %>
    <title>Login</title>
  </head>
  <body>
    <%- include("partials/_header"); %>
    <div class="card text-center">
      <div class="card-header">
        <form class="form-inline" action="/login" method="POST">
          <div class="form-row">
            <label for="email" style="width: 75px; margin: 1em">@Email:</label>
            <input
              type="email"
              name="email"
              placeholder="yourEmail@example.com"
              style="width: 200px; margin: 1em"
            />
          </div>
          <div class="form-row">
            <label for="password" style="width: 75px; margin: 1em"
              >password:</label
            >
            <input
              type="password"
              name="password"
              style="width: 200px; margin: 1em"
            />
          </div>
          <div class="form-row">
            <button
              type="submit"
              class="btn btn-success"
              style="width: 100px; margin: 1em"
            >
              Login
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <%- include("partials/_bootstrap_script"); %>
  </body>
</html>
